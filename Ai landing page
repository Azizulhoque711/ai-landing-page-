import { Button } from "@/components/ui/button";



export default function ContactSection() {

&nbsp;   const handleWhatsApp = () => {

&nbsp;       const phone = "8801708681830";

&nbsp;       const message = encodeURIComponent("আসসালামু আলাইকুম, আমি প্রিমিয়াম চাল অর্ডার করতে চাই।");

&nbsp;       window.open(`https://wa.me/${phone}?text=${message}`, '\_blank');

&nbsp;   };



&nbsp;   const handleCall = () => {

&nbsp;       window.open('tel:+8801708681830', '\_self');

&nbsp;   };



&nbsp;   return (


<script>

&nbsp;   function handleRiceOrder() {

&nbsp;       const phone = "8801708681830";

&nbsp;       const message = encodeURIComponent("আসসালামু আলাইকুম, আমি প্রিমিয়াম চাল অর্ডার করতে চাই।");

&nbsp;       window.open(`https://wa.me/${phone}?text=${message}`, '\_blank');

&nbsp;   }



&nbsp;   function scrollToHighlights() {

&nbsp;       const element = document.getElementById('highlights');

&nbsp;       if (element) {

&nbsp;           element.scrollIntoView({ behavior: 'smooth' });

&nbsp;       } else {

&nbsp;           // If section is on the same page but ID not found, just scroll down

&nbsp;           window.scrollBy({ top: 700, behavior: 'smooth' });

&nbsp;       }

&nbsp;   }

</script>



</body>


## FAQ

import React, { useState } from 'react';

import { motion, AnimatePresence } from 'framer-motion';

import { ChevronDown, HelpCircle } from 'lucide-react';



const faqs = \[

&nbsp;   {

&nbsp;       question: "আপনাদের চাল কি সত্যিই ১০০% খাঁটি?",

&nbsp;       answer: "হ্যাঁ, আমাদের চাল সম্পূর্ণ খাঁটি এবং প্রাকৃতিক। কোনো ভেজাল, কৃত্রিম রঙ বা পলিশ ব্যবহার করা হয় না। প্রতিটি ব্যাচ কঠোর মান নিয়ন্ত্রণের মধ্য দিয়ে যায়।"

&nbsp;   },

&nbsp;   {

&nbsp;       question: "ডেলিভারি কতদিনে পাব?",

&nbsp;       answer: "ঢাকার ভিতরে ১-২ দিন এবং ঢাকার বাইরে ২-৪ দিনের মধ্যে ডেলিভারি দেওয়া হয়। বাল্ক অর্ডারের জন্য আলাদা সময় লাগতে পারে।"

&nbsp;   },

&nbsp;   {

&nbsp;       question: "বাল্ক অর্ডারে কি ছাড় পাওয়া যায়?",

&nbsp;       answer: "হ্যাঁ! ৫০ কেজি বা তার বেশি অর্ডারে বিশেষ মূল্যছাড় পাবেন। রেস্টুরেন্ট এবং ব্যবসায়ীদের জন্য আরও বেশি সুবিধা রয়েছে।"

&nbsp;   },

&nbsp;   {

&nbsp;       question: "পেমেন্ট কীভাবে করব?",

&nbsp;       answer: "ক্যাশ অন ডেলিভারি (COD), বিকাশ, নগদ, রকেট - সব ধরনের পেমেন্ট গ্রহণ করা হয়। অগ্রিম পেমেন্টে অতিরিক্ত ছাড় পাবেন।"

&nbsp;   },

&nbsp;   {

&nbsp;       question: "চাল কতদিন সংরক্ষণ করা যায়?",

&nbsp;       answer: "আধুনিক প্যাকেজিংয়ের কারণে শুষ্ক ও ঠান্ডা স্থানে ৬-১২ মাস পর্যন্ত সংরক্ষণ করা যায়। প্যাকেটে মেয়াদ উল্লেখ থাকে।"

&nbsp;   },

&nbsp;   {

&nbsp;       question: "রিটার্ন পলিসি কী?",

&nbsp;       answer: "পণ্য ডেলিভারির সময় যদি কোনো সমস্যা থাকে, সাথে সাথে রিটার্ন করতে পারবেন। আমরা ১০০% গ্রাহক সন্তুষ্টির নিশ্চয়তা দিই।"

&nbsp;   }

];



export default function FAQ() {

&nbsp;   const \[openIndex, setOpenIndex] = useState(null);



&nbsp;   return (

&nbsp;       <section className="py-24 bg-gradient-to-b from-amber-50 to-orange-50 relative overflow-hidden">

&nbsp;           {/\* Decorative Elements \*/}

&nbsp;           <div className="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-amber-200/40 to-yellow-200/40 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2" />

&nbsp;           <div className="absolute bottom-0 right-0 w-96 h-96 bg-gradient-to-br from-orange-200/40 to-red-200/40 rounded-full blur-3xl translate-x-1/2 translate-y-1/2" />



&nbsp;           <div className="max-w-4xl mx-auto px-4 relative z-10">

&nbsp;               {/\* Section Header \*/}

&nbsp;               <motion.div

&nbsp;                   initial={{ opacity: 0, y: 30 }}

&nbsp;                   whileInView={{ opacity: 1, y: 0 }}

&nbsp;                   viewport={{ once: true }}

&nbsp;                   transition={{ duration: 0.6 }}

&nbsp;                   className="text-center mb-16"

&nbsp;               >

&nbsp;                   <div className="inline-flex items-center gap-2 px-4 py-2 bg-amber-100 border border-amber-200 rounded-full mb-6">

&nbsp;                       <HelpCircle className="w-4 h-4 text-amber-700" />

&nbsp;                       <span className="text-amber-700 text-sm font-semibold">সাধারণ প্রশ্ন</span>

&nbsp;                   </div>

&nbsp;                   <h2 className="text-3xl md:text-5xl font-bold text-gray-900 mb-4">

&nbsp;                       প্রায়শই জিজ্ঞাসিত <span className="text-amber-600">প্রশ্নাবলী</span>

&nbsp;                   </h2>

&nbsp;                   <p className="text-gray-600 text-lg">

&nbsp;                       আপনার মনে থাকা সব প্রশ্নের উত্তর এখানে

&nbsp;                   </p>

&nbsp;               </motion.div>



&nbsp;               {/\* FAQ Items \*/}

&nbsp;               <div className="space-y-4">

&nbsp;                   {faqs.map((faq, index) => (

&nbsp;                       <motion.div

&nbsp;                           key={index}

&nbsp;                           initial={{ opacity: 0, y: 20 }}

&nbsp;                           whileInView={{ opacity: 1, y: 0 }}

&nbsp;                           viewport={{ once: true }}

&nbsp;                           transition={{ delay: index \* 0.1 }}

&nbsp;                       >

&nbsp;                           <button

&nbsp;                               onClick={() => setOpenIndex(openIndex === index ? null : index)}

&nbsp;                               className={`w-full text-left transition-all duration-300 ${

&nbsp;                                   openIndex === index 

&nbsp;                                       ? 'bg-gradient-to-r from-amber-500 to-orange-500 text-white shadow-xl shadow-amber-500/30' 

&nbsp;                                       : 'bg-white/80 backdrop-blur-sm hover:bg-white text-gray-900 shadow-lg hover:shadow-xl border border-amber-100'

&nbsp;                               } rounded-2xl p-6`}

&nbsp;                           >

&nbsp;                               <div className="flex items-center justify-between gap-4">

&nbsp;                                   <h3 className="font-bold text-lg pr-4">

&nbsp;                                       {faq.question}

&nbsp;                                   </h3>

&nbsp;                                   <motion.div

&nbsp;                                       animate={{ rotate: openIndex === index ? 180 : 0 }}

&nbsp;                                       transition={{ duration: 0.3 }}

&nbsp;                                       className={`flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center ${

&nbsp;                                           openIndex === index 

&nbsp;                                               ? 'bg-white/20' 

&nbsp;                                               : 'bg-amber-100'

&nbsp;                                       }`}

&nbsp;                                   >

&nbsp;                                       <ChevronDown className={`w-5 h-5 ${

&nbsp;                                           openIndex === index ? 'text-white' : 'text-amber-600'

&nbsp;                                       }`} />

&nbsp;                                   </motion.div>

&nbsp;                               </div>



&nbsp;                               <AnimatePresence>

&nbsp;                                   {openIndex === index \&\& (

&nbsp;                                       <motion.div

&nbsp;                                           initial={{ height: 0, opacity: 0 }}

&nbsp;                                           animate={{ height: 'auto', opacity: 1 }}

&nbsp;                                           exit={{ height: 0, opacity: 0 }}

&nbsp;                                           transition={{ duration: 0.3 }}

&nbsp;                                           className="overflow-hidden"

&nbsp;                                       >

&nbsp;                                           <p className={`pt-4 leading-relaxed ${

&nbsp;                                               openIndex === index ? 'text-amber-50' : 'text-gray-600'

&nbsp;                                           }`}>

&nbsp;                                               {faq.answer}

&nbsp;                                           </p>

&nbsp;                                       </motion.div>

&nbsp;                                   )}

&nbsp;                               </AnimatePresence>

&nbsp;                           </button>

&nbsp;                       </motion.div>

&nbsp;                   ))}

&nbsp;               </div>



&nbsp;               {/\* Bottom CTA \*/}

&nbsp;               <motion.div

&nbsp;                   initial={{ opacity: 0, y: 30 }}

&nbsp;                   whileInView={{ opacity: 1, y: 0 }}

&nbsp;                   viewport={{ once: true }}

&nbsp;                   className="mt-16 text-center"

&nbsp;               >

&nbsp;                   <p className="text-gray-600 mb-4">আরও কিছু জানতে চান?</p>

&nbsp;                   <a 

&nbsp;                       href="https://wa.me/8801708681830"

&nbsp;                       target="\_blank"

&nbsp;                       rel="noopener noreferrer"

&nbsp;                       className="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-green-500 to-green-600 text-white font-bold rounded-full hover:from-green-600 hover:to-green-700 shadow-xl shadow-green-500/30 hover:shadow-green-500/50 transition-all duration-300"

&nbsp;                   >

&nbsp;                       <HelpCircle className="w-5 h-5" />

&nbsp;                       WhatsApp এ প্রশ্ন করুন

&nbsp;                   </a>

&nbsp;               </motion.div>

&nbsp;           </div>

&nbsp;       </section>

&nbsp;   );

}





